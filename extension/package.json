{
  "name": "vnsh-extension",
  "version": "1.0.0",
  "description": "vnsh Chrome Extension - AI Debug Sharing",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc --noEmit && node --import tsx build.ts",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "package": "npm run build && cd dist && zip -r ../vnsh-extension.zip . -x '*.map'"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.287",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^3.2.0"
  }
}
